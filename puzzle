  <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
  
  <script>
  var answers = $("input:not(:disabled)"); // Retrieve all able inputs

// Array of IDs
var myarr = [
  "myId03",
  "myId12",
  "myId13",
  "myId14",
  "myId15",
  "myId23",
  "myId25",
  "myId31",
  "myId32",
  "myId33",
  "myId35",
  "myId41"
];

// Array of answers
var arr = ["‡∑É", "‡∂¥‡∑í", "‡∂±‡∑ä", "‡∂≠‡∑è", "‡∂ª‡∑î", "‡∂±‡∑è", "‡∑Ä", "‡∂ª‡∑è", "‡∂ú", "‡∂∏", "‡∂Ω", "‡∂´‡∑í"];

// Timing
var seconds = 0;
var timer = setInterval(function(){
  seconds++;
  $("#timer").text(seconds);
}, 1000)
var complete = 0; // To check if the answers are complete

// Check inputs
answers.keyup(function(e) {
  var temp = e.target.id;
  var myIndex = myarr.indexOf(temp); // Check for index of IDs
  var answer = arr[myIndex]; // Check for answer
  var myInput = $(this).val(); // Check for user input

  var correct = true;
  for (var i = 0; i < myInput.length; i++) {
    if (myInput[i] !== answer[i]) {
      correct = false;
      break;
    }
  }

  if (correct && myInput === answer) {
    this.style.backgroundColor = "green";
    $(this).attr("disabled", "true");
    complete++;
  } else {
    this.style.backgroundColor = "red";
    complete--;
  }

  // Check if all answers are complete
  if (complete == 12) {
    clearInterval(timer);
    $("#timer").text("Puzzle completed in " + seconds);
    alert("Hurray!!!\nChallenge complete");
  }
});

$("button").click(function(){
  seconds += 60;
});


// Function to update the timer
function updateTimer() {
  seconds++;
  var minutes = Math.floor(seconds / 60).toString().padStart(2, '0');
  var secs = (seconds % 60).toString().padStart(2, '0');
  var time = minutes + ':' + secs;
  document.getElementById('timer').textContent = time;
}

var seconds = 0;

// Update the timer every second
var timerInterval = setInterval(updateTimer, 1000);

// Initial call to start the timer immediately
updateTimer();

// Define an object to store word hints and corresponding image URLs
var wordHints = {
  " Hint-1 successfully displayed": "https://www.reinventeddelaware.com/wp-content/uploads/2023/01/real-brass-look-alike-paint-technique-11Featured-Image.jpg", // Example: Replace with actual image URLs
  " Hint-2 successfully displayed": "https://slsigiriya.com/wp-content/uploads/2021/07/Ragama-Basilica-3.jpg",
  " Hint-3 successfully displayed": "https://deniseleeyohn.com/wp-content/uploads/2015/08/brand-logos-thumbs-up.jpg",
  " Hint-4 successfully displayed": "https://t3.ftcdn.net/jpg/05/60/68/58/360_F_560685829_v4CK4bgPNcQaNf0qoW2qhntwSnMDiRbm.jpg",
  " Hint-5 successfully displayed": "https://images.thequint.com/thequint/2017-11/e225d786-c009-41e0-8d94-808eadaf9c1f/c108c5af-f569-41a5-ad4a-a9fa7a122a18.jpg?%20%20%20%20%20%20%20%20%20%20%20%20%20%20auto=format,compress&fmt=webp&format=webp&w=1200&h=900&dpr=1.0"
  // Add more word hints and image URLs as needed
};

// Function to reveal hint image corresponding to the word
$("button").click(function() {
  var word = $(this).next().text(); // Get the word associated with the button
  var hintImage = wordHints[word]; // Get the hint image URL from the object

  if (hintImage) { // If a hint image exists for the word
    $("#hint-image-container").html('<img src="' + hintImage + '" alt="Hint Image">');
  } else {
    $("#hint-image-container").html('<p>No hint available for this word</p>');
  }
});

